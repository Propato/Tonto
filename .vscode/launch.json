// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI: GenerateModular",
            "program": "${workspaceFolder}/packages/tonto/bin/cli",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "args": [
                "generateModular",
                "${workspaceFolder}/examples/ontouml-models/amaral2019rot/generated"
            ]
        },
        {
            "name": "CLI: Import Modular",
            "program": "${workspaceFolder}/packages/tonto/bin/cli",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "args": [
                "importModular",
                "${workspaceFolder}/examples/ontouml-models/goncalves2011ecg/ontology.json"
            ]
        },
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Attach to Language Server",
            "type": "node",
            "port": 6009,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/out/**/*.js",
                "${workspaceFolder}/node_modules/langium"
            ],
        },
        {
            "name": "Attach to CLI",
            "type": "node",
            "port": 6009,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/out/cli/*.js",
                "${workspaceFolder}/node_modules/langium"
            ],
        }
    ],
    "compounds": [
        {
            "name": "Run extension and Debug",
            "configurations": [
                "Run Extension",
                "Attach to Language Server"
            ],
            "stopAll": true
        },
        {
            "name": "Run CLI and Debug",
            "configurations": [
                "CLI: GenerateModular",
                "Attach to Language Server"
            ],
        }
    ]
}